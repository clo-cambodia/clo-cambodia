<style>
/* Header */
.header {
	width: 100vw;
	background-color: var(--blue-signature-color);
	user-select: none;
	margin-top: 1px;
	position: relative;
}

.header-grid {
	display: grid;
	grid-template-columns: 1fr 1fr;
  	align-items: stretch;
	justify-content: space-between;
	height: 100%;
	gap: 100px;
}

.header-text {
	display: flex;
	flex-direction: column;
	justify-content: center;
	color: white;
	text-align: justify;
	line-height: 2em;
	padding: 20px 0;
	width: min(1400px, 75%);
  	margin-left: auto;
}

.header-text h1 {
	text-transform: uppercase;
}

.header-text p {
	font-size: 18px;
	color: #f5f2f2;
	margin: 20px 0;
}

.header-image {
	height: 100%;
	overflow: hidden;
}

.header-image img {
	width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
	transform: rotateY(180deg);
	mask-image: linear-gradient(to right, black 0%, black 90%, transparent 100%);
	-webkit-mask-image: linear-gradient(to right, black 0%, black 90%, transparent 100%);
}

.action-links a {
	text-decoration: none;
	color: var(--blue-signature-color);
	background-color: white;
	font-weight: 500;
	font-size: 16px;
	transition: 0.2s;
	padding: 15px 35px;
	margin-right: 30px;
}

.action-links a:hover {
    color:  white;
    border: white 1px solid;
	background-color: transparent;
    cursor: pointer;
}

.action-links-bottom {
	display: none;
}
/* Khmer Pattern on the right side of header */
.khmer-pattern-right, 
.khmer-pattern-bottom-left, 
.khmer-pattern-bottom-right {
	display: none;
}

.khmer-pattern, .khmer-pattern-right {
  width: 100px;
  position: absolute;
  inset: 0;
  overflow: hidden;
  pointer-events: none;
  z-index: 0;
  font-family: "Noto Serif Khmer", "Khmer OS", serif;
}

/* Khmer Patterns */
.khmer-pattern span {
  position: absolute;
  font-size: 48px;
  opacity: 0.1;
  color: white;
  user-select: none;
  transform-origin: center;
}

.khmer-pattern span:nth-child(1) {
  top: 10%;
  left: 15%;
  transform: rotate(-15deg) scale(1.2);
}

.khmer-pattern span:nth-child(2) {
  top: 10%;
  left: 45%;
  transform: rotate(10deg) scale(0.9);
}

.khmer-pattern span:nth-child(3) {
  top: 50%;
  left: 30%;
  transform: rotate(-25deg) scale(1.4);
}

.khmer-pattern span:nth-child(4) {
  top: 70%;
  left: 50%;
  transform: rotate(20deg) scale(1.1);
}

.khmer-pattern span:nth-child(5) {
  top: 40%;
  left: 15%;
  transform: rotate(-10deg) scale(1.4);
}

.khmer-pattern span:nth-child(6) {
  top: 55%;
  left: 10%;
  transform: rotate(-10deg) scale(0.8);
}

.khmer-pattern span:nth-child(7) {
  top: 35%;
  left: 10%;
  transform: rotate(80deg) scale(1.3);
}

.khmer-pattern span:nth-child(8) {
  top: 25%;
  left: 30%;
  transform: rotate(10deg) scale(0.9);
}

.khmer-pattern span:nth-child(9) {
  top: 87%;
  left: 5%;
  transform: rotate(-80deg) scale(1.2);
}

.khmer-pattern span:nth-child(10) {
  top: 80%;
  left: 45%;
  transform: rotate(20deg) scale(1.1);
}

.khmer-pattern span:nth-child(11) {
  top: 20%;
  left: 45%;
  transform: rotate(20deg) scale(1.1);
}

.khmer-pattern span:nth-child(12) {
  top: 40%;
  left: 45%;
  transform: rotate(20deg) scale(0.9);
}

.khmer-pattern span:nth-child(13) {
  top: 17%;
  left: 10%;
  transform: rotate(-10deg) scale(0.8);
}

.khmer-pattern span:nth-child(14) {
  top: 65%;
  left: 5%;
  transform: rotate(80deg) scale(1.3);
}

.khmer-pattern span:nth-child(15) {
  top: 75%;
  left: 5%;
  transform: rotate(10deg) scale(0.9);
}

.khmer-pattern span:nth-child(16) {
  top: 1%;
  left: 10%;
  transform: rotate(-80deg) scale(1.4);
}

.khmer-pattern span:nth-child(17) {
  top: 25%;
  left: 5%;
  transform: rotate(-10deg) scale(0.8);
}

.khmer-pattern span:nth-child(18) {
  top: 60%;
  left: 45%;
  transform: rotate(80deg) scale(1.3);
}

.khmer-pattern span:nth-child(19) {
  top: 30%;
  left: 45%;
  transform: rotate(10deg) scale(1.3);
}

.khmer-pattern span:nth-child(20) {
  top: 1%;
  left: 50%;
  transform: rotate(-80deg) scale(1.4);
}

/* Border underneath the title */
.underline {
	display: block;
	width: 60px;
	height: 5px;
	background: #0A4FB4;
	margin: 2px auto 0;
}

/* Section */
.title-and-media {
	text-align: center;
	margin: 30px 0;
}

.title-and-media h2 {
	font-size: 26px;
	font-weight: 700;
	letter-spacing: 1px;
}

/* Intro Text */
.intro-text {
	margin: auto;
	text-align: center;
}

.intro-text p {
	margin-bottom: 16px;
	text-align: justify;
	font-size: 20px;
}

.intro-text-second-para {
	font-weight: 600;
}

/* Media */
.media {
	margin-bottom: 50px;
}

.media iframe {
	width: 100%;
	height: 75vh;
}

/* view-our-work */
.view-our-work {
	text-align: center;
}

.view-our-work .btn-primary {
	background: var(--blue-signature-color);
	color: white;
	padding: 15px 35px;
	font-size: 20px;
	text-decoration: none;
	font-weight: 500;
}

.view-our-work .btn-primary:hover {
	border: var(--blue-signature-color) 1px solid;
    color: var(--blue-signature-color) !important;
    background-color: white;
    cursor: pointer;
}

/* Quote */
.statement-section {
	display: none;
}

.quote {
  position: relative;
  display: flex;
  flex-direction: row;          
  align-items: flex-end;
  justify-content: center;
  height: 500px;
}

.quote::before {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%;               
  background-color: var(--blue-signature-color);
  z-index: 0;
}

.quote-child {
  position: relative;
  display: flex;
  flex-direction: row;         
  align-items: center;
  justify-content: center;
}

.text-block {
  display: flex;
  flex-direction: column;
  justify-content: end;
  align-items: end;
  flex: 1;
  color: white;
  line-height: 2em;
  text-align: justify;
  font-size: 16px;
}

.text-block p {
	width: 80%;
}

.text-block span {
	margin-top: 20px;
}

.text-block .author {
	width: 100%;
	text-align: right;
	font-size: 14px;
	opacity: 0.9;
}

.image-block {
  flex: 1;
}

.image-block img {
  width: 70%;
  height: auto;
  margin-right: 60px;
}

/* COLLABORATORS */
.collaborators {
	text-align: center;
	background: #f7f7f7;
	user-select: none;
	padding-top: 50px;
}

.collaborators h1 {
	margin-bottom: 6px;
}

.logo-row {
	padding: 100px 0;
	margin-top: 10px;
	display: grid;
	grid-template-columns: repeat(6, 1fr);
	align-items: center;
	justify-content: center;
	gap: 40px;
	width: 100%;
}

.logo img {
	width: 120px;
	height: 120px;
	color: #555;
	margin: 0;
	padding: 0;
}

#silLogo img {
	width: 190px;
	height: 100px;
}

#wycliffe img {
	width: 250px;
}

